@page
@model ChildGrowth.WebPage.Pages.BlogModel
@{
    ViewData["Title"] = "Blog - Child Growth Tracker";
}

<!-- Thêm style để định dạng kích thước ảnh -->
<style>
    .uniform-img {
        width: 100%;
        height: 250px; /* Bạn có thể điều chỉnh giá trị này */
        object-fit: cover;
    }
</style>

<div class="container">
    <div class="row">
        @if (Model.BlogPosts != null && Model.BlogPosts.Count > 0)
        {
            foreach (var post in Model.BlogPosts)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="@post.ImageUrl" class="card-img-top uniform-img" alt="Post Image">
                        <div class="card-body">
                            <h5 class="card-title">@post.Title</h5>
                            <p class="card-text">
                                <small class="text-muted">
                                    @post.Category<br />
                                    Views: @post.ViewCount
                                </small>
                            </p>
                            <p class="card-text">@post.Summary</p>
                            <a asp-page="/BlogDetail" asp-route-id="@post.Id" class="btn btn-primary">Read More</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No blog posts available.</p>
        }
    </div>

    <!-- Phân trang -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Model.CurrentPage - 1)">Previous</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">Previous</span>
                    </li>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        <li class="page-item active">
                            <span class="page-link">@i</span>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@i">@i</a>
                        </li>
                    }
                }

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Model.CurrentPage + 1)">Next</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">Next</span>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
