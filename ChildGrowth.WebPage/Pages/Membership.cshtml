@page
@{
    ViewData["Title"] = "Membership Plans";
}

<!-- HERO / JUMBOTRON -->
<div class="jumbotron jumbotron-fluid text-white" style="background: url('~/images/membership-hero.jpg') no-repeat center center; background-size: cover;">
    <div class="container py-5 text-center">
        <h1 class="display-4">Elevate Your Child's Health Journey</h1>
        <p class="lead">Select the membership plan that unlocks premium features, expert consultations, and more.</p>
        <a class="btn btn-primary btn-lg mr-2" asp-page="/Register" role="button">Sign Up Now</a>
        <a class="btn btn-outline-light btn-lg" asp-page="/GrowthTracking" role="button">Explore Features</a>
    </div>
</div>

<!-- INTRODUCTION SECTION -->
<div class="container my-5">
    <div class="text-center mb-4">
        <h2>Membership Plans</h2>
        <p class="text-muted">Each plan offers a unique set of benefits tailored to your child's growth and health monitoring needs.</p>
    </div>

    <!-- PRICING CARDS -->
    <div class="row">
        <!-- BASIC PLAN -->
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
                <div class="card-header text-center">
                    <h4 class="my-0 font-weight-normal">Basic</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">$9.99 <small class="text-muted">/ month</small></h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>Basic growth tracking</li>
                        <li>Standard alerts</li>
                        <li>Email support</li>
                    </ul>
                    <a asp-page="/Membership/Subscribe" asp-route-plan="Basic" class="btn btn-lg btn-block btn-outline-primary">Sign Up</a>
                </div>
            </div>
        </div>

        <!-- PREMIUM PLAN -->
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
                <div class="card-header text-center bg-primary text-white">
                    <h4 class="my-0 font-weight-normal">Premium</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">$19.99 <small class="text-muted">/ month</small></h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>All Basic features</li>
                        <li>Advanced charts & analytics</li>
                        <li>Priority doctor consultation</li>
                    </ul>
                    <a asp-page="/Membership/Subscribe" asp-route-plan="Premium" class="btn btn-lg btn-block btn-primary">Sign Up</a>
                </div>
            </div>
        </div>

        <!-- ELITE PLAN -->
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
                <div class="card-header text-center bg-dark text-white">
                    <h4 class="my-0 font-weight-normal">Elite</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">$29.99 <small class="text-muted">/ month</small></h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>All Premium features</li>
                        <li>One-on-one sessions with experts</li>
                        <li>Personalized health roadmap</li>
                    </ul>
                    <a asp-page="/Membership/Subscribe" asp-route-plan="Elite" class="btn btn-lg btn-block btn-warning text-white">Sign Up</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- BENEFITS SECTION -->
<div class="container my-5">
    <div class="row">
        <div class="col-md-6 mb-4">
            <h3>Why Choose Our Membership?</h3>
            <ul>
                <li>Monitor multiple children at once</li>
                <li>Receive early alerts on abnormal growth patterns</li>
                <li>Share growth data with doctors anytime</li>
                <li>Access detailed consultation history and health records</li>
            </ul>
        </div>
        <div class="col-md-6 mb-4">
            <img src="~/images/family-checkup.jpg" alt="Family Checkup" class="img-fluid rounded shadow" />
        </div>
    </div>
</div>

<!-- CALL TO ACTION SECTION -->
<div class="py-5 text-center bg-light">
    <h2>Start Your Child's Health Journey Today</h2>
    <p>Our team of experts is ready to support you at every step.</p>
    <a class="btn btn-success btn-lg" asp-page="/Membership/Subscribe" asp-route-plan="Premium">Upgrade Now</a>
</div>
