@* Pages/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Child Growth Tracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .navbar {
            background-color: #007bff !important;
            /* Consider slightly more vertical padding if needed */
            /* padding-top: 0.8rem; */
            /* padding-bottom: 0.8rem; */
        }

        .navbar .navbar-brand {
             padding-top: .5rem; /* Adjust vertical padding for brand if needed */
             padding-bottom: .5rem;
        }

        .navbar .nav-link {
            color: white !important;
            font-weight: 500;
            /* Added horizontal padding for more space around text */
            padding-left: 1rem !important; /* Equivalent to px-3 */
            padding-right: 1rem !important; /* Equivalent to px-3 */
        }

        .navbar .nav-item {
             /* Added small horizontal margin between nav items */
             margin-left: 0.25rem; /* Equivalent to mx-1 */
             margin-right: 0.25rem; /* Equivalent to mx-1 */
        }


        .navbar .nav-link:hover {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 5px;
        }

        .btn-login {
            border: 2px solid white;
            color: white !important;
             /* Added some padding to the login button */
            padding: 0.375rem 1rem;
        }

        .btn-login:hover {
            background: white;
            color: #007bff !important;
        }

        /* Style for the Profile dropdown toggle specifically */
        .navbar .dropdown-toggle {
            padding-left: 1rem !important;
            padding-right: 1rem !important;
        }

        /* Ensure dropdown menu aligns right */
        .dropdown-menu-right {
             right: 0;
             left: auto; /* Override default left alignment */
        }

        /* Add some margin below the navbar */
        .navbar {
            margin-bottom: 1.5rem; /* Adjust as needed, adds space below navbar */
        }


    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-primary bg-primary py-2">
    <a style="margin-left: 20px" class="navbar-brand text-white mr-3" asp-page="/Index">Child Growth Tracker</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent"
            aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarContent">
        <ul class="navbar-nav">
            <li class="nav-item mx-1"><a class="nav-link px-3" asp-page="/MembershipPlan">Membership</a></li>
            <li class="nav-item mx-1"><a class="nav-link px-3" asp-page="/GrowthTracking">Growth Tracking</a></li>
            <li class="nav-item mx-1"><a class="nav-link px-3" asp-page="/Consultation">Consultation</a></li>
            <li class="nav-item mx-1"><a class="nav-link px-3" asp-page="/Blog">Blog</a></li>
            <li class="nav-item mx-1"><a class="nav-link px-3" asp-page="/FAQ">FAQ</a></li>
        </ul>

        <ul class="navbar-nav ml-auto">
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item mx-1"><a class="nav-link px-3" asp-page="/Profile">Profile</a></li>
                <li class="nav-item mx-1"><a class="nav-link px-3" asp-page="/Logout">Logout</a></li>
            }
            else
            {
             <li class="nav-item mx-1">
                <a class="btn btn-outline-light btn-login" asp-page="/Login">Login</a>
            </li>
            }
        </ul>
    </div>
</nav>

<div class="container mt-5">
    @RenderBody()
</div>

<footer class="footer bg-primary text-white py-4 mt-5">
    <div class="container text-center">
        <p>&copy; @DateTime.Now.Year Child Growth Tracker. All rights reserved.</p>
         <a asp-page="/About" class="text-light mr-3">About Us</a>
        <a asp-page="/Contact" class="text-light ml-3">Contact</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
@await RenderSectionAsync("Scripts", required: false) </body>
</html>