@page
@model ChildGrowth.WebPage.Pages.ConsultationModel
@{
    ViewData["Title"] = "Consultation - Appointments";
}

<div class="d-flex">
    <nav class="sidebar bg-light p-3" style="width: 250px; min-height: 100vh;">
        <h4 class="text-primary">ChildGrowth</h4>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-page="/Profile">Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-page="/Child">Child</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" asp-page="/Consultation">Consultation</a>
            </li>
        </ul>
    </nav>

    <div class="container my-5 flex-grow-1">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-white">
                <h2 class="mb-0">Consultation Appointments</h2>
            </div>
            <div class="card-body">
                @if (Model.Appointments != null && Model.Appointments.Any())
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Date and Time</th>
                                <th>Doctor</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in Model.Appointments)
                            {
                                <tr>
                                    <td>@appointment.AppointmentDateTime.ToString("yyyy-MM-dd h:mm tt")</td>
                                    <td>@appointment.Doctor</td>
                                    <td>
                                        <a asp-page="/Consultation/Details" asp-route-id="@appointment.Id" class="btn btn-info btn-sm">View</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        No consultation appointments available.
                    </div>
                }
            </div>
        </div>
    </div>
</div>