@page "{id:int}"
@model ChildGrowth.WebPage.Pages.Child.DetailModel
@{
    ViewData["Title"] = "Child Details";
}

<div class="container mt-5">
    <!-- Child Information Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Child Details</h2>
        </div>
        <div class="card-body">
            <h4>@Model.Child.FullName</h4>
            <p><strong>Date of Birth:</strong> @Model.Child.DateOfBirth</p>
            <p><strong>Gender:</strong> @Model.Child.Gender</p>
            <p><strong>Birth Weight:</strong> @Model.Child.BirthWeight kg</p>
            <p><strong>Birth Height:</strong> @Model.Child.BirthHeight cm</p>
            <p><strong>Blood Type:</strong> @Model.Child.BloodType</p>
        </div>
        <div class="card-footer text-right">
            <!-- Back and Edit Buttons -->
            <a asp-page="Child" class="btn btn-secondary">Back to List</a>
            <a asp-page="EditChild" asp-route-id="@Model.Child.ChildId" class="btn btn-primary ml-2">Edit</a>
        </div>
    </div>

    <!-- Growth Records Section -->
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">Growth Records</h3>
        </div>
        <div class="card-body">
            <!-- Create Growth Record Button -->
            <div class="mb-3">
                <a asp-page="/Child/Create" asp-route-childId="@Model.Child.ChildId" class="btn btn-success">Create Growth Record</a>
            </div>

            <!-- Growth Records Table -->
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Weight (kg)</th>
                        <th>Height (cm)</th>
                        <th>BMI</th>
                        <th>Notes</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in Model.GrowthRecords)
                    {
                        <tr>
                            <td>@record.RecordDate.ToString("yyyy-MM-dd")</td>
                            <td>@record.Weight</td>
                            <td>@record.Height</td>
                            <td>@record.Bmi</td>
                            <td>@record.Notes</td>
                            <td>
                                <!-- Edit and Detail Buttons for each Growth Record -->
                                <a asp-page="/Child/Edit" asp-route-id="@record.RecordId" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-page="/Child/Detail" asp-route-id="@record.RecordId" class="btn btn-info btn-sm ml-2">Detail</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Pagination Controls -->
            <nav>
                <ul class="pagination">
                    @if (Model.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-page="Detail" asp-route-id="@Model.Child.ChildId" asp-route-pageIndex="@(Model.CurrentPage - 1)">Previous</a>
                        </li>
                    }
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                            <a class="page-link" asp-page="Detail" asp-route-id="@Model.Child.ChildId" asp-route-pageIndex="@i">@i</a>
                        </li>
                    }
                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-page="Detail" asp-route-id="@Model.Child.ChildId" asp-route-pageIndex="@(Model.CurrentPage + 1)">Next</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>
