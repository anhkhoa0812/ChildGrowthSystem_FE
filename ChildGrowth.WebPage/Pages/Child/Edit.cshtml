@page "{childId:int}/{recordId:int}"
@model ChildGrowth.WebPage.Pages.Child.EditModel

<h2>Edit Growth Record</h2>

<form method="post">
    <div>
        <label for="RecordDate">Record Date:</label>
        <input type="date" id="RecordDate" asp-for="GrowthRecord.RecordDate" />
    </div>
    <div>
        <label for="Weight">Weight:</label>
        <input type="number" id="Weight" asp-for="GrowthRecord.Weight" />
    </div>
    <div>
        <label for="Height">Height:</label>
        <input type="number" id="Height" asp-for="GrowthRecord.Height" />
    </div>
    <div>
        <label for="Bmi">BMI:</label>
        <input type="number" id="Bmi" asp-for="GrowthRecord.Bmi" />
    </div>
    <!-- Add other fields as needed -->

    <button type="submit">Save</button>
</form>
