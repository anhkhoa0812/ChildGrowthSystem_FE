@page
@model ChildGrowth.WebPage.Pages.Child.ChildEditModel
@{
    ViewData["Title"] = "Edit Child";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-white">
            <h2 class="mb-0">Edit Child</h2>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="Child.Id" />
                <input type="hidden" asp-for="Child.ParentId" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Child.FullName" class="form-label">Full Name</label>
                            <input asp-for="Child.FullName" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Child.DateOfBirth" class="form-label">Date of Birth</label>
                            <input type="date" asp-for="Child.DateOfBirth" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Child.Gender" class="form-label">Gender</label>
                            <select asp-for="Child.Gender" class="form-select" required>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Child.BirthWeight" class="form-label">Birth Weight (kg)</label>
                            <input asp-for="Child.BirthWeight" type="number" step="0.01" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Child.BirthHeight" class="form-label">Birth Height (cm)</label>
                            <input asp-for="Child.BirthHeight" type="number" step="0.1" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Child.BloodType" class="form-label">Blood Type</label>
                            <select asp-for="Child.BloodType" class="form-select">
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="AB">AB</option>
                                <option value="O">O</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Child.AllergiesNotes" class="form-label">Allergies</label>
                            <textarea asp-for="Child.AllergiesNotes" class="form-control"></textarea>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Child.MedicalHistory" class="form-label">Medical History</label>
                            <textarea asp-for="Child.MedicalHistory" class="form-control"></textarea>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Child.PreexistingConditions" class="form-label">Preexisting Conditions</label>
                            <textarea asp-for="Child.PreexistingConditions" class="form-control"></textarea>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Child.EmergencyContact" class="form-label">Emergency Contact</label>
                            <input asp-for="Child.EmergencyContact" type="text" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Child.InsuranceInfo" class="form-label">Insurance Info</label>
                            <input asp-for="Child.InsuranceInfo" type="text" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label asp-for="Child.PediatricianInfo" class="form-label">Pediatrician Info</label>
                            <input asp-for="Child.PediatricianInfo" type="text" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label asp-for="Child.DevelopmentalNotes" class="form-label">Developmental Notes</label>
                            <textarea asp-for="Child.DevelopmentalNotes" class="form-control"></textarea>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Child.PhotoUrl" class="form-label">Photo URL</label>
                            <input asp-for="Child.PhotoUrl" type="url" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <a asp-page="Child" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
