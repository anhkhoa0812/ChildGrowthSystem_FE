@page
@model ChildGrowth.WebPage.Pages.ChildModel
@{
    ViewData["Title"] = "Child";
}

<div class="d-flex">
    <nav class="sidebar bg-light p-3" style="width: 250px; min-height: 100vh;">
        <h4 class="text-primary">ChildGrowth</h4>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="/Profile">Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/Child/Child">Child</a>
            </li>
        </ul>
    </nav>

    <div class="container my-5 flex-grow-1">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between">
                <h2 class="mb-0">Child</h2>
                <a asp-page="ChildCreate" class="btn btn-success">Create Child</a>
            </div>
            <div class="card-body">
                @if (Model.Children.Any())
                {
                    <div class="row mb-3">
                        <div class="col">
                            <p class="text-muted">
                                Total Children: @Model.TotalChildren |
                                Page: @Model.CurrentPage of @Model.TotalPages |
                                Page Size: @Model.PageSize
                            </p>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-borderless table-hover">
                            <thead class="bg-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Full Name</th>
                                    <th>Date of Birth</th>
                                    <th>Gender</th>
                                    <th>Status</th>
                                    <th>Birth Weight</th>
                                    <th>Birth Height</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var child in Model.Children)
                                {
                                    <tr>
                                        <td>@child.ChildId</td>
                                        <td>@child.FullName</td>
                                        <td>@(child.DateOfBirth == DateTime.MinValue ? "N/A" : child.DateOfBirth.ToString("yyyy-MM-dd"))</td>
                                        <td>@child.Gender</td>
                                        <td>@child.Status</td>
                                        <td>@child.BirthWeight kg</td>
                                        <td>@child.BirthHeight cm</td>
                                        <td>
                                            <a asp-page="ChildDetail" asp-route-id="@child.ChildId" class="btn btn-info btn-sm">Details</a>
                                            <a asp-page="ChildEdit" asp-route-id="@child.ChildId" class="btn btn-warning btn-sm">Edit</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info" role="alert">
                        No children found.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    .table th, .table td {
        vertical-align: middle;
    }
</style>
