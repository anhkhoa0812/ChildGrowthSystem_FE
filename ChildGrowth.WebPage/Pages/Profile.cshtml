@page
@model ChildGrowth.WebPage.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile - User Details";
}

<div class="d-flex">
    <nav class="sidebar bg-light p-3" style="width: 250px; min-height: 100vh;">
        <h4 class="text-primary">ChildGrowth</h4>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link active" href="/Profile">Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Child/Child">Child</a>
            </li>
        </ul>
    </nav>

    <div class="container my-5 flex-grow-1">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">User Profile</h2>
            </div>
            <div class="card-body">
                @if (Model.User != null)
                {
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <img src="@Model.User.AvatarUrl" alt="User Avatar" class="img-fluid rounded-circle mb-3" style="max-width: 200px;" />
                        </div>
                        <div class="col-md-8">
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <th scope="row">Username:</th>
                                        <td>@Model.User.Username</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Full Name:</th>
                                        <td>@Model.User.FullName</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Email:</th>
                                        <td>@Model.User.Email</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Phone Number:</th>
                                        <td>@Model.User.PhoneNumber</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Address:</th>
                                        <td>@Model.User.Address</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">User Type:</th>
                                        <td>@Model.User.UserType</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Date of Birth:</th>
                                        <td>@Model.User.DateOfBirthDisplay</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Gender:</th>
                                        <td>@Model.User.Gender</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Status:</th>
                                        <td>@Model.User.Status</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Membership Plan:</th>
                                        <td>@Model.User.MembershipPlan</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-danger" role="alert">
                        Unable to load user details.
                    </div>
                }
            </div>
        </div>
    </div>
</div>